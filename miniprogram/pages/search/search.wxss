page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
  border-radius: 5rpx;
  flex:8
  
}
.search_row button {
  width: 30rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  margin: 0 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  flex: 2
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.main{
  display: flex;
  width: 100%;
  height: 100%;
  align-items: left;
  justify-content: left;  
  text-align: left;
  background-color: #ffff;
}

.word{
  width: fit-content;
font-size:20px; /*设置文字字号*/
color:black; /*设置文字颜色*/
font-weight:bold; /*设置字体加粗*/

font-family:"黑体"; /*设置字体为宋体*/
}
.tte{font-size:large;width:100%;margin-bottom: 40rpx}
.tteframe{font-size:large;width:100%;  border:5rpx solid #ffff;}
.title{display:flex;justify-content: left;align-items: center;font-weight:bold;font-size:x-large;}

.content{
  font-size:medium;width:90%;
  border:8rpx dotted yellowgreen;
margin:10rpx;
height:60rpx;
display:flex;
align-items:center;}